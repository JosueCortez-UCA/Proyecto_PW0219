<div class="row">
  {{#each reserv}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ lugar }} <a href="/reserv/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ estado }}</p>
        <!-- REQUEST PARA BORRAR-->
        <form action="/reserv/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola, {{user.name}}</h1>
      <p clsss="lead">No tienes solicitudes.</p>
      <a href="/reserv/add" class="btn btn-success btn-block">Â¡Llenar Solicitud!</a>
    </div>
  </div>
  {{/each}}
</div>
