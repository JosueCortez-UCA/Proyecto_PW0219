<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva solicitud</h3>
    </div>
    <div class="card-body">
      <form action="/reserv/new-reserv" method="POST">
        <div class="form-group">
          <input type="text" name="lugar" class="form-control" placeholder="Lugar" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="fecha_emision" class="form-control" placeholder="Fecha emision"/>
        </div>
        <div class="form-group">
          <input id="datepicker" type="text" name="fecha_reserva" class="form-control" placeholder="Fecha reserva"/>
        </div>
        <div class="form-group">
          <input type="text" name="horas" class="form-control" placeholder="Horas a reservar"/>
        </div>
        <div class="form-group">
          <input type="text" name="estado" class="form-control" placeholder="Estado"/>
        </div>
        <div class="form-group">
          <input type="text" name="justificacion" class="form-control" placeholder="justificacion"/>
        </div>
        <div class="form-group">
          <input type="text" name="cantidad" class="form-control" placeholder="cantidad"/>
        </div>
        <div class="form-group">
          <input type="text" name="tipo_reserva" class="form-control" placeholder="Tipo de reserva"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Enviar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
