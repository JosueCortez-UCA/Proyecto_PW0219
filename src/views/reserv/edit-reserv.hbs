{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Solicitud</h3>
    </div>
    <div class="card-body">
      <form action="/reserv/edit-reserv/{{reserv._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        
        <div class="form-group">
          <input type="text" name="lugar" class="form-control" placeholder="Lugar" value="{{reserv.lugar}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="fecha_emision" class="form-control" disabled="" placeholder="Fecha emision" value="{{reserv.fecha_emision}}"/>
        </div>
        <div class="form-group">
          <input id="datepicker" type="text" name="fecha_reserva" class="form-control" placeholder="Fecha reserva" value="{{reserv.fecha_reserva}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="horas" class="form-control" placeholder="Horas a reservar" value="{{reserv.horas}}"/>
        </div>
        <div class="form-group">
          <textarea type="text" name="justificacion" class="form-control" placeholder="justificacion" cols="30" rows="10">{{reserv.justificacion}}</textarea>
        </div>
        <div class="form-group">
          <input type="text" name="cantidad" class="form-control" placeholder="cantidad" value="{{reserv.cantidad}}"/>
        </div>
        <div class="form-group">
          <label for="tipo_reserva"></label>
          <select class="form-control" id="tipo_reserva" name="tipo_reserva">
            <option selected="true" disabled="disabled">{{reserv.tipo_reserva}}</option>
            <option>Parcial</option>
            <option>Total</option>
          </select>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
