<div class="jumbotron mt-4">
  <h1 class="display-4 text-center">Administración del Perfil</h1>
  <hr>
  <div id="region-main">
    <form action="/index" method="GET" >
        <div class="card text-white bg-secondary mt-3" style="max-width: 20rem;">
            <div class="card-body">
                <label for="carnet" >Correo</label>
                <input id="id_email" type="text" name="email" class="form-control" autocomplete="email">
            </div>
        </div>
        <div class="card text-white bg-secondary mt-3 " style="max-width: 20rem;">
            <div class="card-body">
                <label for="name" >Nombre</label>
                <input type="text" name="firstname" class="form-control" autocomplete="given-name" >
            </div>
        </div>
        <div class="card text-white bg-secondary mt-3 " style="max-width: 20rem;">
            <div class="card-body">
                <label for="lastname" >Apellido(s)</label>
                <input type="text" name="lastname" class="form-control" id="id_lastname" autocomplete="family-name">
            </div>
        </div>
        <div class="card text-white bg-secondary mt-3" style="max-width: 20rem;">
            <div class="card-body">
                <label for="password" >Password</label>
                <input type="text" name="password" class="form-control" autocomplete="new-password">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-info mt-3 btn-lg">Guardar/Actualizar</button>
            <button id="id_cancel" type="submit" class="btn btn-info mt-3 btn-lg" name="cancel" value="Cancelar" onclick="skipClientValidation: true">Cancelar</button>
        </div>
    </form>    
    </div>
    <!-- LIST -->
    <hr>
    <div class="col-md-7" class="text-center">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Día</th>
            <th>materia</th>
            <th>Hora</th>
          </tr>
        </thead>
        <tbody>
            {{#each task}}
              <tr>
          
                <td><strong>{{ this.dia}}</strong></td>
                <td>{{ this.materia}}</td>
                <td>{{ this.hora}}</td>
                <td>
                  <a
                    class="{{ this.status ? 'btn btn-success' : 'btn btn-dark'}}"
                    href="/turn/{{ this._id }}">Done</a>
                  <a href="/delete/{{ this._id }}"
                    class="btn btn-danger">
                    Delete
                  </a>
                  <a href="/edit/{{ this._id }}" class="btn btn-info">
                    Edit
                  </a>
                </td>
              </tr>
            {{/each }}
        </tbody>
      </table>

    </div>
</div>

    


