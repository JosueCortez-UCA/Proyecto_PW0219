<section class="jumbotron mt-4">
  <h1 class="display-4 text-center">Administraci√≥n del Perfil</h1>
  <hr>
  <div id="region-main">
                <form action="/index" method="GET">
                <div class="card text-white bg-secondary mt-3" style="max-width: 20rem;">
                    <div class="card-body">
                        <label for="carnet" >Correo</label>
                        <input id="id_email" type="text" name="email" class="form-control" autocomplete="email">
                    </div>
                </div>
                <div class="card text-white bg-secondary mt-3 " style="max-width: 20rem;">
                    <div class="card-body">
                        <label for="name" >Nombre</label>
                        <input type="text" name="firstname" class="form-control" autocomplete="given-name" >
                    </div>
                </div>
                <div class="card text-white bg-secondary mt-3 " style="max-width: 20rem;">
                    <div class="card-body">
                        <label for="lastname" >Apellido(s)</label>
                        <input type="text" name="lastname" class="form-control" id="id_lastname" autocomplete="family-name">
                    </div>
                </div>
                <div class="card text-white bg-secondary mt-3" style="max-width: 20rem;">
                    <div class="card-body">
                        <label for="password" >Password</label>
                        <input type="text" name="password" class="form-control" autocomplete="new-password">
                    </div>
                </div>
                <button type="submit" class="btn btn-info mt-3 btn-lg">Guardar/Actualizar</button>
                <button id="id_cancel" type="submit" class="btn btn-info mt-3 btn-lg" name="cancel" value="Cancelar" onclick="skipClientValidation: true">Cancelar</button>
                </form>
            </section>
</div>
