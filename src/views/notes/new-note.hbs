<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva solicitud</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input type="text" name="lugar" class="form-control" placeholder="Lugar" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="fecha_emision" class="form-control" placeholder="Fecha emision"></textarea>
        </div>
        <div class="form-group">
          <textarea name="fecha_reserva" class="form-control" placeholder="Fecha reserva"></textarea>
        </div>
        <div class="form-group">
          <textarea name="hora" class="form-control" placeholder="Hora"></textarea>
        </div>
        <div class="form-group">
          <textarea name="tipo_reserva" class="form-control" placeholder="Tipo de reserva"></textarea>
        </div>
        <div class="form-group">
          <textarea name="estado" class="form-control" placeholder="Estado"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Enviar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

