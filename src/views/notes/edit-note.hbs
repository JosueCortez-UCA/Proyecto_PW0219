{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Solicitud</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="lugar" class="form-control" value="{{note.lugar}}"/>
        </div>
        <div class="form-group">
          <textarea name="fecha_emision" class="form-control">{{note.fecha_emision}}</textarea>
        </div>
        <div class="form-group">
          <textarea name="fecha_reserva" class="form-control">{{note.fecha_reserva}}</textarea>
        </div>
        <div class="form-group">
          <textarea name="hora" class="form-control">{{note.hora}}</textarea>
        </div>
        <div class="form-group">
          <textarea name="tipo_reserva" class="form-control">{{note.tipo_reserva}}</textarea>
        </div>
        <div class="form-group">
          <textarea name="estado" class="form-control">{{note.estado}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
